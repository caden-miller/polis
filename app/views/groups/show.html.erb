<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @group %>

    <h2 class="mt-5 text-lg font-bold">Users in this Group:</h2>
    <ul class="mt-3 space-y-2 rounded-lg overflow-hidden bg-primary-rotate">
      <% @group.users.each do |user| %>
        <li class="p-3 bg-primary-rotate text-secondary border-b border-secondary-rotate">
          <p><strong>Name:</strong> <%= user.name %></p>
          <p><strong>Email:</strong> <%= user.email %></p>
        </li>
      <% end %>
    </ul>

    <%= link_to "Back to groups", groups_path, class: "ml-2 rounded-lg py-3 px-5 bg-secondary-rotate inline-block text-primary font-medium" %>
    <%= link_to "Edit this group", edit_group_path(@group), class: "mt-2 rounded-lg py-3 px-5 bg-secondary-rotate text-primary inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this group", @group, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-500 text-white font-medium" %>
    </div>
  </div>
</div>
