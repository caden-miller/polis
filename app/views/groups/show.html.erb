<div class="container mx-auto w-full h-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @group %>

    <h2 class="mt-5 text-lg font-bold">Users in this Group:</h2>
    <ul class="mt-3 space-y-2 rounded-lg overflow-hidden bg-primary-rotate">
      <% @group.users.each do |user| %>
        <li class="p-3 bg-primary-rotate text-secondary border-b border-secondary-rotate">
          <p class="text-accent">
            <%= link_to (user ? user.display_name : "Deleted User"), user_path(user), class: "text-accent hover:underline" %>
          </p>
          <p class="text-secondary-rotate text-sm"><%= user.political_affiliation %></p>

        </li>
      <% end %>
    </ul>
    <div class="flex justify-between items-center gap-10 mt-4">
      <%= link_to "Back to groups", groups_path, class: "rounded-lg py-3 px-5 bg-gray-400 inline-block text-black font-medium" %>
      <%= link_to "Edit this group", edit_group_path(@group), class: "rounded-lg py-3 px-5 bg-secondary-rotate text-primary inline-block font-medium" %>
      <div class="inline-block">
        <%= button_to "Destroy this group", @group, method: :delete, class: "rounded-lg py-3 px-5 bg-red-500 text-white font-medium" %>
      </div>
    </div>
  </div>
</div>
